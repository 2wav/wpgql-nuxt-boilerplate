{
  "name": "wpgql-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate Nuxt app that gets data from Wordpress through GraphQL",
  "author": "2wav inc.",
  "private": true,
  "scripts": {
    "gen-schema-sdl": "npx get-graphql-schema http://localhost:8080/graphql > schema.gql",
    "gen-schema-json": "npx get-graphql-schema http://localhost:8080/graphql --json > apollo/client-configs/schema.json",
    "gen-schema-json-prod": "npx get-graphql-schema https://wp.huntillinois.org/graphql --json > apollo/client-configs/schema.json",
    "fragments": "node fragments.js",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "jest",
    "dev-watch": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "dev": "npm run gen-schema-json && npm run fragments && npm run dev-watch",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate"
  },
  "dependencies": {
    "@nuxtjs/apollo": "^4.0.0-rc7",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/pwa": "^2.6.0",
    "@nuxtjs/redirect-module": "^0.2.0",
    "@nuxtjs/style-resources": "^0.1.2",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "@nuxtjs/eslint-module": "^0.0.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-plugin-import": ">=2.16.0",
    "eslint-plugin-jest": ">=22.3.0",
    "eslint-plugin-node": ">=8.0.1",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "jest": "^24.1.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "vue-jest": "^3.0.3",
    "webpack": "^4.35.0"
  }
}
